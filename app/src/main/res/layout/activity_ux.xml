<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spaceSmall"
    tools:context=".UxActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UxToolkit Demonstration"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvApiLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spaceSmall"
            />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Example Alert"
            android:id="@+id/btnAlert" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Example Confirm"
            android:id="@+id/btnConfirm" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Preloader"
            android:id="@+id/btnProgress" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show keyboard"
            android:id="@+id/btnShowKB" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hide Keboard"
            android:id="@+id/btnHideKB" />

        <EditText
            android:id="@+id/etText"
            android:hint="Enter Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>